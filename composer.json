{
    "name": "joomla/input",
    "type": "joomla-package",
    "description": "Joomla Input Package",
    "keywords": ["joomla", "framework", "input"],
    "homepage": "https://github.com/joomla-framework/input",
    "license": "GPL-2.0+",
    "require": {
        "php": "~5.4|~7.0",
        "joomla/filter": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8|~5.0",
        "squizlabs/php_codesniffer": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Input\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Input\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
	        "dev-2.0-dev": "2.0-dev"
        }
    }
}
